{% extends 'base.html.twig' %}

{% block title %}GerenMov - Departamentos{% endblock %}

{% block body %}
    <h1>Departamentos</h1>

    <table class="table table-striped table-hover" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for departamento in departamentos %}
            <tr>
                <td>{{ departamento.id }}</td>
                <td>{{ departamento.nomeStr }}</td>
                <td>
                    <a href="{{ path('departamento_show', {'id': departamento.id}) }}" class="btn btn-dark">Mostrar</a>
                    <a href="{{ path('departamento_edit', {'id': departamento.id}) }}" class="btn btn-light">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Nenhum registro encontrado.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('departamento_new') }}" class="btn btn-primary">Criar Novo</a>
{% endblock %}

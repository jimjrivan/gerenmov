{% extends 'base.html.twig' %}

{% block title %}GerenMov - Movimentações{% endblock %}

{% block body %}
    <h1>Movimentações</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descrição</th>
                <th>Valor</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for movimento in movimentos %}
            <tr>
                <td>{{ movimento.id }}</td>
                <td>{{ movimento.descricaoStr }}</td>
                <td>{{ movimento.valorNum }}</td>
                <td>
                    <a href="{{ path('movimentos_show', {'id': movimento.id}) }}" class="btn btn-dark">Mostrar</a>
                    <a href="{{ path('movimentos_edit', {'id': movimento.id}) }}" class="btn btn-light">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Nenhum registro encontrado.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('movimentos_new') }}" class="btn btn-primary">Criar Novo</a>
{% endblock %}
